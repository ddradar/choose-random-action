{
  "name": "choose-random-action",
  "description": "Choose one randomly from multiple user inputs",
  "version": "2.0.2",
  "author": "ddradar",
  "private": true,
  "main": "dist/index.js",
  "repository": "https://github.com/ddradar/choose-random-action",
  "keywords": [
    "actions",
    "github-actions",
    "random"
  ],
  "license": "MIT",
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "build": "ncc build src/main.ts -m --target es2021 --license licenses.txt",
    "fix": "run-p \"lint:eslint -- --fix\" \"lint:prettier -- --write\"",
    "lint": "run-p lint:*",
    "lint:eslint": "eslint --ext .ts --ignore-path .gitignore .",
    "lint:prettier": "prettier --ignore-path .gitignore -l \"**/*.{ts,json,md,yml}\"",
    "prepare": "husky install",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "lint-staged": {
    "*.{ts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml}": "prettier --write"
  },
  "dependencies": {
    "@actions/core": "^1.10.0"
  },
  "devDependencies": {
    "@tsconfig/node16": "^16.1.0",
    "@tsconfig/strictest": "^2.0.2",
    "@typescript-eslint/eslint-plugin": "^6.5.0",
    "@typescript-eslint/parser": "^6.2.1",
    "@vercel/ncc": "^0.36.1",
    "@vitest/coverage-v8": "^0.34.1",
    "eslint": "^8.46.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-vitest": "^0.2.8",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "npm-run-all2": "^6.0.6",
    "prettier": "^3.0.1",
    "typescript": "^5.1.6",
    "vitest": "^0.34.1"
  }
}
