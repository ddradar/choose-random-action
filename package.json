{
  "name": "choose-random-action",
  "type": "module",
  "version": "3.0.0",
  "private": true,
  "description": "Choose one randomly from multiple user inputs",
  "author": "Nogic <24802730+nogic1008@users.noreply.github.com>",
  "license": "MIT",
  "repository": "https://github.com/ddradar/choose-random-action",
  "keywords": [
    "actions",
    "github-actions",
    "random"
  ],
  "main": "dist/index.js",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "build": "ncc build src/main.ts -m --license licenses.txt --target es2022",
    "fix": "run-p \"lint:eslint -- --fix\" \"lint:prettier -- --write\"",
    "lint": "run-p lint:*",
    "lint:eslint": "eslint .",
    "lint:prettier": "prettier --ignore-path .gitignore -l \"**/*.{mjs,ts,json,md,yml}\"",
    "prepare": "husky",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "lint-staged": {
    "*.{mjs,ts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml}": "prettier --write"
  },
  "dependencies": {
    "@actions/core": "^1.10.1"
  },
  "devDependencies": {
    "@tsconfig/node20": "^20.1.4",
    "@tsconfig/strictest": "^2.0.5",
    "@vercel/ncc": "^0.38.1",
    "@vitest/coverage-v8": "^2.0.5",
    "eslint": "^9.8.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-vitest": "^0.5.4",
    "husky": "^9.1.4",
    "lint-staged": "^15.2.7",
    "npm-run-all2": "^6.2.2",
    "prettier": "^3.3.3",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.0.0",
    "vitest": "^2.0.5"
  }
}
